# Variables
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

# Deault rule
all: $(NAME)

# Rule for building the final executable
$(NAME): $(OBJ)
	$(CC) $^ -o $@

# Rule for building .o files from .c files
%.o: %.c
	$(CC) -c -o $@ $<

# Phony target to prevent file conflict
.PHONY: all
